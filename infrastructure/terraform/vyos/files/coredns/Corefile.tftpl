(common) {
  errors
  log error
  reload
  loadbalance
  cache
  loop
  local

  prometheus :9153

  health {
     lameduck 5s
   }
}

(local_hosts) {
  hosts /config/hosts {
    ttl 1
    reload 5s
    fallthrough greyrock.tech
  }
}

(k8s_gateway) {
  forward . 10.45.0.3:53
}

greyrock.tech {
  import common
  import local_hosts
  import k8s_gateway
}

greyrock.io {
  import common
  import local_hosts
}
